<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    Record rules for multi company-->
     <record id="delivery_route_rule" model="ir.rule">
        <field name="name">Delivery Route Multi-Company</field>
        <field name="model_id"
               ref="model_delivery_route"/>
        <field name="domain_force">['|', ('company_id', '=', False),
            ('company_id', 'in', company_ids)]
        </field>
    </record>
</odoo>
