<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-call='point_of_sale.PaymentScreenButtons']" position="after">
<!--        <xpath expr="//div[hasclass('payment-buttons')]/div[hasclass('payment-controls')]" position="after">-->
            <div class="zatca-flags" t-if="env.pos.company.is_zatca">
                <h3><center>Zatca Flags</center></h3>
                <div style="display: grid;gap: 10px;margin:0;padding:0;">
                    <div class="button" t-on-click="toggleIsThirdParty"
                          style="grid-column-start: 0;grid-column-end: 1;height: fit-content;"
                          t-att-class="{ highlight: currentOrder.l10n_is_third_party_invoice }">
                        <i class="fa fa-check-square-o"/>
                        Is Third Party
                    </div>
                    <div class="button" t-on-click="toggleIsNominal"
                          style="grid-column-end: 2;border-top-width: 1px;height: fit-content;"
                          t-att-class="{ highlight: currentOrder.l10n_is_nominal_invoice }">
                        <i class="fa fa-check-square-o"/>
                        Is Nominal
                    </div>
                    <div class="button" t-on-click="toggleIsSummary"
                          style="grid-column-end: 1;border-top-width: 1px;height: fit-content;"
                          t-att-class="{ highlight: currentOrder.l10n_is_summary_invoice }">
                        <i class="fa fa-check-square-o"/>
                        Is Summary
                    </div>
                    <label style="grid-column-end: 1;border-top-width: 1px;"
                           t-if="currentOrder.get_total_with_tax() &lt; 0">Refund reason</label>
                </div>
                <div style="display: grid;gap: 10px;margin:0;padding:0;">
                    <input class="" t-on-change="Refund_Reason" t-if="currentOrder.get_total_with_tax() &lt; 0"
                           t-att-value="currentOrder.credit_debit_reason"
                           style="grid-column-end: 2;border-top-width: 1px;"/>
                </div>
            </div>
        </xpath>
    </t>

</templates>
