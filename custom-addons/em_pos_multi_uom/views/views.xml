<?xml version="1.0"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.pos_hr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position='inside'>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_multi_uom"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_multi_uom"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_only_form_view">
            <field name="name">product.template.view.form.easy</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <span class="d-inline-block">
                        <field name="has_multi_uom"/>
                        <label for="has_multi_uom"/>
                    </span>
                </div>
                <notebook position="inside">
                    <page name="extra_ingredients" string="Extra Products">
                        <field name="multi_uom_ids">
                            <tree editable="bottom">
                                <field name="multi_uom_id" required="True"/>
                                <field name="barcode"/>
                                <field name="sequence"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record id="view_pos_pos_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lines']/tree/field[@name='full_product_name']" position="after">
                    <field name="product_uom"/>
                </xpath>
            </field>
        </record>


        <record id="product_template_only_form_view_inherit" model="ir.ui.view">
    <field name="name">product.template.view.form.custom</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
        <xpath expr="//div[@name='options']" position="inside">
            <!-- Add your custom fields or modifications here -->
            <field name="has_multi_uom"/>
            <label for="has_multi_uom"/>
        </xpath>
        <xpath expr="//notebook/page[@name='extra_ingredients']" position="inside">
            <!-- Extend or modify existing fields within the notebook/page -->
            <field name="multi_uom_ids">
                <tree editable="bottom">
                    <field name="multi_uom_id" required="True"/>
                    <field name="barcode"/>
                    <field name="sequence"/>
                    <field name="price"/>
                </tree>
            </field>
        </xpath>
    </field>

            <record id="action_view_product_template_custom_form" model="ir.actions.act_window">
    <field name="name">Custom Product Template Form</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="product_template_only_form_view_inherit"/>
       </record>

<menuitem id="menu_custom_product_template" name="Custom Product Template" parent="base.menu_inventory_management" action="action_view_product_template_custom_form"/>

</record>




    </data>
</odoo>
