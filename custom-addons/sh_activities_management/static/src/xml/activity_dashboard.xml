<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="activity_dashboard.dashboard">
		<section id="activity_dashboard_header_filter" class="counter-area" style="min-width: 100% !important; width: 100% !important;">
			<div class="container">
				<div class="o_control_panel d-flex flex-column gap-3 gap-lg-1 px-3 pt-2 pb-3" data-command-category="actions">
					<div class="o_control_panel_main d-flex row">
						<div class="o_control_panel_breadcrumbs d-flex align-items-center gap-1 order-0 h-lg-100 col-lg-3">
							<div class="o_breadcrumb d-flex gap-1 text-truncate">
								<div class="o_last_breadcrumb_item active d-flex fs-4 min-w-0 align-items-center" style="font-size: 1.875rem !important;">
									<strong class="min-w-0 text-truncate">Activity Dashboard</strong>
								</div>
								<div class="o_control_panel_breadcrumbs_actions d-inline-flex"></div>
							</div>
							<span class="d-none d-xl-block me-auto"></span>
						</div>
						<div class="o_control_panel_actions d-empty-none d-flex align-items-center justify-content-start justify-content-lg-around order-2 order-lg-1 w-100 w-lg-auto col-lg-6">
							<div class="o-filter-value d-flex align-items-start w-100">
								<div class="w-100">
									<Many2XAutocomplete
										value="state.infos.activitytype"
										resModel="'mail.activity.type'"									
										fieldString="props.name"
										update.bind="onUpdateType"
										getDomain="sh_activity_type_getDomain"
										activity_type="props"
										activeActions="{ create: false, createEdit: false, write: false }"
										placeholder="state.infos.activitypelaceholder"
									/>
								</div>
							</div>	
							<div class="o-filter-value d-flex align-items-start w-100">
								<div class="w-100">
									<Many2XAutocomplete
										value="state.infos.user"
										resModel="'res.users'"
										getDomain="sh_user_getDomain"
										fieldString="props.name"
										update.bind="onUpdateUser"
										activeActions="{ create: false, createEdit: false, write: false }"
										placeholder="state.infos.userplaceholder"
									/>
								</div>
							</div>		
							<div class="o-filter-value d-flex align-items-start w-100">
								<div class="w-100">
									<Many2XAutocomplete
										value="state.infos.superuser"
										resModel="'res.users'"
										getDomain="sh_superuser_getDomain"
										fieldString="props.name"
										update.bind="onUpdateSuperUser"
										activeActions="{ create: false, createEdit: false, write: false }"
										placeholder="state.infos.superuserplaceholder"
									/>
								</div>
							</div>				
						</div>
					</div>
				</div>
			</div>			
		</section>	
		<!-- Dashboard Cards Section -->
		<section id="dashboard_counter" class="counter-area" style="min-width: 100% !important; width: 100% !important;">					
			<div class="container mt-2">
				<div id="js_id_sh_crm_activity_all_count_tbl_div">
					<div class="row row-sm">					
						<t t-if="state.defaultconfig.sh_display_all_activities_counter">
							<div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
								<div class="card card_1 custom-card" style="transition:0.5s" href="#">
									<div class="sh-card-body dash1 bg-info" style="padding:25px 20px !important">
										<div class="media" style="display:flex">
											<span class="fa fa-clock-o fs-20 text-white align-self-center mr-3" style="font-size:38px"></span>
											<div style="display: flex;color: white;flex-direction:column;margin-left:12px" class="text-white flex-grow-1 ms-3">												
												<h3 class="mt-0" style="color:white;">
													<t t-esc="all_activities_count" />
													0
												</h3>
												<span><p>All Activities</p></span>
												<input type="text" id="all_activity" t-att-value="all_activities" style="display: none;" />
											</div>
										</div>
									</div>
								</div>								
							</div>
						</t>
						<t t-if="state.defaultconfig.sh_display_planned_activities_counter">
							<div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
								<div class="card card_2 custom-card" style="transition:0.5s" href="#">
									<div class="sh-card-body dash1 bg-warning" style="padding:25px 20px !important">
										<div class="media" style="display:flex">
											<span class="fa fa-clock-o fs-20 text-white align-self-center mr-3" style="font-size:38px"></span>
											<div style="display: flex;color: white;flex-direction:column;margin-left:12px" class="text-white flex-grow-1 ms-3">												
												<h3 class="mt-0" style="color:white;">
													<t t-esc="planned_activities_count" />
													0
												</h3>
												<span><p>Planned Activities</p></span>
												<input type="text" id="planned_activity" t-att-value="all_activities" style="display: none;" />
											</div>
										</div>
									</div>
								</div>				
							</div>
						</t>
						<t t-if="state.defaultconfig.sh_display_completed_activities_counter">
							<div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
								<div class="card card_3 custom-card" style="transition:0.5s" href="#">
									<div class="sh-card-body dash1 bg-success" style="padding:25px 20px !important">
										<div class="media" style="display:flex">
											<span class="fa fa-clock-o fs-20 text-white align-self-center mr-3" style="font-size:38px"></span>
											<div style="display: flex;color: white;flex-direction:column;margin-left:12px" class="text-white flex-grow-1 ms-3">												
												<h3 class="mt-0" style="color:white;">
													<t t-esc="completed_activities_count" />
													0
												</h3>
												<p>Completed Activities</p>										
											</div>
											   <input type="text" id="completed_activity" t-att-value="completed_activities" style="display: none;" />
										</div>
									</div>
								</div>
							</div>
						</t>
						<t t-if="state.defaultconfig.sh_display_overdue_activities_counter">
							<div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
								<div class="card card_3 custom-card" style="transition:0.5s" href="#">
									<div class="sh-card-body dash1 bg-danger" style="padding:25px 20px !important">
										<div class="media" style="display:flex">
											<span class="fa fa-clock-o fs-20 text-white align-self-center mr-3" style="font-size:38px"></span>
											<div style="display: flex;color: white;flex-direction:column;margin-left:12px" class="text-white flex-grow-1 ms-3">												
												<h3 class="mt-0" style="color:white;">
													<t t-esc="overdue_activities_count" />
													0
												</h3>
												<p>Overdue Activities</p>
											</div>
											<input type="text" id="overdue_activity" t-att-value="overdue_activities" style="display: none;" />
										</div>
									</div>
								</div>
							</div>
						</t>
						<t t-if="state.defaultconfig.sh_display_cancelled_activities_counter">
								<div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
									<div class="card card_3 custom-card" style="transition:0.5s" href="#">
										<div class="sh-card-body dash1 bg-dark" style="padding:25px 20px !important">
											<div class="media" style="display:flex">
												<span class="fa fa-clock-o fs-20 text-white align-self-center mr-3" style="font-size:38px"></span>
												<div style="display: flex;color: white;flex-direction:column;margin-left:12px" class="text-white flex-grow-1 ms-3">												
													<h3 class="mt-0" style="color:white;">
														<t t-esc="cancelled_activities_count" />
														0
													</h3>
													<p>Cancelled Activities</p>
												</div>
												<input type="text" id="cancel_activity" t-att-value="cancelled_activities" style="display:none;" />
											</div>
										</div>
									</div>
								</div>
							</t>
					</div>
				</div>
			</div>
		</section>	
		
    </t>
</templates>
