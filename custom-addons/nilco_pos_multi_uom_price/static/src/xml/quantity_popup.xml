<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
   <t t-name="point_of_sale.QuantityPopup">
    <div class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><t t-esc="_t('Enter Quantity')"/></h4>
                    <button type="button" class="close" aria-label="Close" t-on-click="onClose">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Correctly bound to the component’s state -->
                    <input type="number" class="form-control" t-model="quantity" min="0" step="any"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" t-on-click="onClose"><t t-esc="_t('Cancel')"/></button>
                    <button type="button" class="btn btn-primary" t-on-click="onConfirm"><t t-esc="_t('Confirm')"/></button>
                </div>
            </div>
        </div>
    </div>
</t>

</templates>
