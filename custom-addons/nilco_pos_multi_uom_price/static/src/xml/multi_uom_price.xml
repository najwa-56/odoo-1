<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="point_of_sale.UOMButton" owl="1">

		 <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.onClick()">
            <i class="fa fa-tag" role="img" aria-label="UOM" title="UOM" />
            UOM
        </button>
	</t>

    <t t-name="NumericInput_inherit" inherit_id="point_of_sale.NumericInput" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='input-group']" position="attributes">
            <!-- Hide the buttons -->
            <attribute name="class">d-flex align-items-center input-group</attribute>
        </xpath>
        <xpath expr="//button[contains(@class, 'fa-minus')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
        <xpath expr="//button[contains(@class, 'fa-plus')]" position="attributes">
            <attribute name="style">display: none;</attribute>
        </xpath>
   	</t>

</templates>
