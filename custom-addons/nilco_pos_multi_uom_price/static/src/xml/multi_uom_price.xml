<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="point_of_sale.UOMButton" owl="1">

		 <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.onClick()">
            <i class="fa fa-tag" role="img" aria-label="UOM" title="UOM" />
            UOM
        </button>
	</t>

    <t t-name="NumericInput_inherit" inherit_id="point_of_sale.NumericInput" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[contains(@class, 'fa-minus')]" position="replace">
            <t t-if="false">
                <button class="btn btn-secondary border" t-on-click="() => this.setValue(this.getValue() - 1)" t-att-disabled="getValue() lte props.min">
                    <i class="fa fa-minus center"/>
                </button>
            </t>
        </xpath>
        <xpath expr="//button[contains(@class, 'fa-plus')]" position="replace">
            <t t-if="false">
                <button class="btn btn-secondary border" t-on-click="() => this.setValue(this.getValue() + 1)">
                    <i class="fa fa-plus"/>
                </button>
            </t>
        </xpath>
   	</t>

</templates>
