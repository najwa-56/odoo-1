<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="point_of_sale.UOMButton" owl="1">

		 <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.onClick()">
            <i class="fa fa-tag" role="img" aria-label="UOM" title="UOM" />
            UOM
        </button>
	</t>

   <t t-name="point_of_sale.Numpad">
        <div class="numpad">
            <t t-foreach="buttons" t-as="button" t-key="button.value">
                <t t-if="button.value !== '-'">
                    <button t-attf-class="numpad-button #{button.class}"
                            t-on-click="() => onClick(button.value)"
                            t-att-title="button.text">
                        <t t-esc="button.text" />
                    </button>
                </t>
            </t>
        </div>
    </t>
	
</templates>
