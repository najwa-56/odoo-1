<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-name="point_of_sale.UOMButton" owl="1">

		 <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.onClick()">
            <i class="fa fa-tag" role="img" aria-label="UOM" title="UOM" />
            UOM
        </button>
	</t>

    <xpath expr="//t[@t-name='point_of_sale.NumericInput']" position="replace">
        <t t-name="point_of_sale.NumericInput">
            <div t-attf-class="{{props.class}} d-flex align-items-center input-group" >
                <!-- Hide the minus button -->
                <button class="btn btn-secondary border" t-att-disabled="getValue() lte props.min" style="display: none;">
                    <i class="fa fa-minus center"/>
                </button>
                <input class="o_input form-control border text-center text-bg-light" type="number"
                        t-on-focus="ev=>ev.target.select()"
                        t-att-value="getValue()"
                        t-att-min="props.min"
                        t-on-input="(event) => this.setValue(parseInt(event.target.value))" />
                <!-- Hide the plus button -->
                <button class="btn btn-secondary border" style="display: none;">
                    <i class="fa fa-plus"/>
                </button>
            </div>
        </t>
    </xpath>
    
	
</templates>
