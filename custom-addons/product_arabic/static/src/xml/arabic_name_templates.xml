<?xml version="1.0" encoding="UTF-8"?>
<!--Templates for adding the arabic name in product screen and order line-->
<templates id="template" xml:space="preserve">
    <t t-name="product_arabic.OrderReceipt"
       t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//Orderline" position="inside">
                    <t t-if="line.product_arabic" t-esc="line.product_arabic"/>
        </xpath>
    </t>
    <t t-name="product_arabic.ProductCard" t-inherit="point_of_sale.ProductCard"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-name')]" position="after">
            <span>
                <t t-if="props.productArabic" t-esc="props.productArabic"/>
            </span>
        </xpath>
    </t>
</templates>
