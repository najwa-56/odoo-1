<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--    Need to add the button function in ProductsWidget, this will call the
function-->
     <t t-name="product_arabic.ProductsWidget" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension">
        <xpath expr="//t[@t-foreach='productsToDisplay']" position="replace">
            <t t-foreach="productsToDisplay" t-as="product" t-key="product.id">
                <ProductCard
                    class="pos.productViewMode"
                    t-att-name="product.display_name"
                    t-att-productId="product.id"
                    t-att-productArabic="product.product_arabic"
                    t-att-price="product.getFormattedUnitPrice()"
                    t-att-imageUrl="product.getImageUrl()"
                    t-att-productInfo="true"
                    t-att-onClick="() => this.pos.addProductToCurrentOrder(product)"
                    t-att-onProductInfoClick="() => this.onProductInfoClick(product)"
                />
            </t>
        </xpath>
    </t>
</odoo>
