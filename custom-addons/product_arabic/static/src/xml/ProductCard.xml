<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!--    Need to add the button function in ProductsWidget, this will call the
function-->
    <t t-name="product_arabic.ProductsWidget" t-inherit="point_of_sale.ProductsWidget" t-inherit-mode="extension">
        <xpath expr="//t[@t-foreach='productsToDisplay']" position="replace">
            <t t-foreach="productsToDisplay" t-as="product" t-key="product.id">
                <ProductCard
        t-props-class="product.class"
        t-props-name="product.name"
        t-props-productArabic="productArabic"
        t-props-productId="product.productId"
        t-props-price="product.price"
        t-props-imageUrl="product.imageUrl"
        t-props-productInfo="product.productInfo"
        t-props-onClick="product.onClick"
        t-props-onProductInfoClick="product.onProductInfoClick"
    />


            </t>
        </xpath>
    </t>
</odoo>
