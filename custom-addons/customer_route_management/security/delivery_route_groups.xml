<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--   Group  under which user groups and manager groups appear-->
    <record model="ir.module.category" id="module_customer_route_management">
        <field name="name">Delivery Route Creation</field>
        <field name="description">User access levels for customer route
            management module
        </field>
        <field name="sequence">10</field>
    </record>
    <!--    User groups-->
    <record id="group_delivery_route_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_customer_route_management"/>
    </record>
    <!--    Manager groups-->
    <record id="group_delivery_route_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_customer_route_management"/>
        <field name="implied_ids"
               eval="[(4, ref('group_delivery_route_user'))]"/>
    </record>
</odoo>
