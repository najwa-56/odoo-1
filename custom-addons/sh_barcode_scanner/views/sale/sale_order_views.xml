<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_sale_barcode_scanner_sale_view_order_form" model="ir.ui.view">
        <field name="name">sh.sale.barcode.scanner.sale.view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="after">
                <field name="_barcode_scanned" widget="barcode_handler" />
            </field>

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-primary">sh_sale_barcode_scanner_is_last_scanned</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field name="sh_sale_barcode_scanner_is_last_scanned" column_invisible="True" />
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban//field[@name='product_id']" position="after">
                <field name="sequence"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//kanban" position="attributes">
                <attribute name="default_order">sequence</attribute>
            </xpath>
        </field>
    </record>
</odoo>
