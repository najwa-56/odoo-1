<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="bf_pos_total_qty.ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <xpath expr="//OrderWidget" position="attributes">
            <attribute name="qty">currentOrder.get_total_quantity()</attribute>
        </xpath>
    </t>
    <t t-name="bf_pos_total_qty.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('subentry')]" position="after">
            <div t-if="props.tax" class="fs-6 text-muted subentry total_order text-center">
                Quantity of products: <span t-esc="props.qty" class="tax"/>
            </div>
        </xpath>
    </t>
    <t t-name="bf_pos_total_qty.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//OrderWidget" position="after">
            <t t-if='props.data.total_quantity'>
                <div>
                    Quantity of products:
                    <span t-esc="props.data.total_quantity" class="pos-receipt-right-align"/>
                </div>
                <br/>
            </t>
        </xpath>
    </t>
</templates>
