<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ksa.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('notice')]" position="after">
            <div class="zatca_status_box mt-2">
                <div class='notice zatca_status'
                     style='border: 1px solid darkgrey;padding: 5px;overflow: auto;'>
                    <center style='width: 100%;' >
                        <b class='notice zatca_status_details'></b>
                    </center>
                </div>
            </div>
        </xpath>
    </t>

    <t t-name="ksa.ZatcaSimplified">
        <div>
            <h1>Rendering Receipt ...</h1>
        </div>
    </t>

</templates>
