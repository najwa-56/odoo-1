<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('partner-details-box')]" position="inside">
              <div class="partner-detail col">

                  <label class="form-label label" for="Date of Birth">Buyer Identification Number</label>

                  <input class="detail buyer_identification_no form-control" id="buyer_identification_no" name="buyer_identification_no" t-model="changes.buyer_identification_no" t-att="{'disabled': isFieldCommercialAndPartnerIsChild('buyer_identification_no')}" t-att-class="{'border-danger': missingFields.includes('buyer_identification_no')}" />
                  
               
                </div>
                <div class="partner-detail col">
                    <label class="form-label label" for="building_no">Building No</label>
                    <input class="detail form-control" id="building_no" name="building_no" t-model="changes.building_no" placeholder="Building No" />
                </div>
    
                <!-- Additional No field -->
                <div class="partner-detail col">
                    <label class="form-label label" for="additional_no">Additional No</label>
                    <input class="detail form-control" id="additional_no" name="additional_no" t-model="changes.additional_no" placeholder="Additional No" />
                </div>
    
                <!-- District field -->
                <div class="partner-detail col">
                    <label class="form-label label" for="district">District</label>
                    <input class="detail form-control" id="district" name="district" t-model="changes.district" placeholder="District" />
                </div>
                
        </xpath>
    </t>

</templates>
