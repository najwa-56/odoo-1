<odoo>
    <data>
        <record id="view_company_form_inherit_pos_speed" model="ir.ui.view">
            <field name="name">res.company.form.inherit.pos.speed</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <page name="general_info" position="after">
                    <page string="Point of Sale" name="point_of_sale">
                        <group>
                            <group>
                                <field name="x_allow_online_search"/>
                            </group>
                            <group>
                                <field name="x_limit_partner" invisible="x_allow_online_search == False" />
                                <field name="x_limit_product" invisible="x_allow_online_search == False"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>