<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='multi_uom_price_id']/tree" position="inside">
                 <field name="barcode"/>
                  <field name="product_variant_id" column_invisible="1"/>
            </xpath>
          
        </field>
    </record>


 <record id="combined_product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.form.inheritt</field>
        <field name="model">product.multi.uom.price</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='multi_uom_price_id']/tree" position="inside">
                 <field name="barcode"/>
                  <field name="product_variant_id" column_invisible="1"/>
            </xpath>

        </field>
    </record>

    <!-- New Menu Item -->
    <menuitem id="menu_combined_tree_view" name="Combined Tree View" parent="sale.product_menu_catalog"/> <!-- Adjust parent menu ID -->

    <!-- New Action -->
    <record id="action_combined_tree_view" model="ir.actions.act_window">
        <field name="name">Combined Tree View</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="combined_product_template_tree_view"/>
    </record>

    <!-- Link Action to Menu Item -->
    <menuitem id="menu_combined_tree_view" action="action_combined_tree_view"/>
</odoo>
