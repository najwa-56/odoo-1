<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='multi_uom_price_id']/tree" position="inside">
                 <field name="barcode"/>
                  <field name="product_variant_id" column_invisible="1"/>
            </xpath>
          
        </field>
    </record>

      <!-- Merged View -->
    <record id="product_template_form_view_merged" model="ir.ui.view">
        <field name="name">product.template.form.merged</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']" position="inside">
                <group>
                    <field name="category_id" invisible="1" column_invisible="1"/>
                </group>
                <group name="uom_price" string="UOM Price">
                    <field name="multi_uom_price_id" nolabel="1" colspan="2">
                        <tree editable="bottom">
                            <field name="barcode"/>
                            <field name="product_variant_id" column_invisible="1"/>
                            <field name="category_id" invisible="1" column_invisible="1"/>
                            <field name="uom_id"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

     <!-- Action Definition -->
        <record id="action_product_product_tree" model="ir.actions.act_window">
            <field name="name">product_multi_uom_price</field>
            <field name="res_model">product.multi.uom.price</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_product_tree_view"/>
        </record>

        <!-- Menu Item Definition -->
        <menuitem id="menu_product_product_tree"
                  name="الوحدات المتعددة "
                  action="action_product_product_tree"
                  parent="sale.product_menu_catalog"
                  sequence="10"/>

</odoo>
