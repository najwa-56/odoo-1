<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_voucher_document">
        <t t-call="print_voucher.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
<!--            <t t-foreach="docs" t-as="o">-->
                <div class="page" style="font-size:20px;">
                    <t t-if="o.payment_type == 'inbound' ">
                        <div style="text-align:center;">
                            <p><b>RECEIPT VOUCHER</b></p>
                        </div>
                    </t>
                    <t t-if="o.payment_type == 'outbound' ">
                        <div style="text-align:center;">
                            <p><b>PAYMENT VOUCHER</b></p>
                        </div>
                    </t><br/><br/>
                    <div class="row">
                        <div class="col-xs-6">
                            <div style="text-align:left;margin-left: 8px;">
                                <t t-if="o.amount">Amount : <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></t>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 ">
                            <div style=" padding-left:950px; padding-top:2px;" >
                                <t t-if="o.name">No : <span t-field="o.name"/></t><br/>
                                <t t-if="o.date">Date : <span t-field="o.date"/></t>
                            </div>
                        </div>
                    </div><br/>
                    <t t-if="o.payment_type == 'inbound' ">
                        <div id="val"  style="margin-bottom: 0px ! important;padding-left: 235px;height: 0px;">
                            <t t-if="o.partner_id">
                                <span t-field="o.partner_id"/>
                            </t>
                        </div>
                        <div  id="label" style="margin-top: 0px;">Received from Mr./ M /s.</div>
                        <p id="dots" style="padding-left: 219px;margin-top: -15px;">
............................................................................................................................................................................................................................................................
                        </p>
                        </t>
                    <t t-if="o.payment_type == 'outbound' ">
                        <div id="val"  style="margin-bottom: 0px ! important;padding-left: 58px;height: 0px;">
                            <t t-if="o.partner_id">
                                <span t-field="o.partner_id"/>
                            </t>
                        </div>
                        <div  id="label" style="margin-top: 0px;">Paid to</div>
                        <p id="dots" style="padding-left: 50px;margin-top: -15px;">
...............................................................................................................................................................................................................................................

                        </p>
                    </t>
                    <div id="val"  style="margin-bottom: 0px ! important;padding-left: 110px;height: 0px;">
                        <t t-if="o.amount">
                            <span t-field="o.words_amount"/>
                        </t>
                    </div>
                    <div  id="label" style="margin-top: 0px;">Sum of</div>
                    <p id="dots" style="padding-left: 73px;margin-top: -15px;">
................................................................................................................................................................................................................................................................................................

                    </p>
                    <div id="val"  style="margin-bottom: 0px ! important;padding-left: 103px;height: 0px;">
                        <t t-if="o.ref">
                            <span t-field="o.ref"/>
                        </t>
                    </div>
                    <div  id="label" style="margin-top: 0px;">Being</div>
                    <p id="dots" style="padding-left:71px;margin-top: -15px;">
................................................................................................................................................................................................................................................................................................

                    </p><br/><br/><br/><br/>
                    <table style="width:100%; table-layout:fixed;border: 1px solid #FFFFFF;border-collapse: collapse;">
                        <tr>
                            <td style=" width:30%; text-align:center;"><span t-field="o.create_uid"/></td>
                            <td style=" width:30%; text-align:center;">...............................</td>
                            <td style=" width:30%; text-align:center;">............................... </td>
                        </tr>
                        <tr>
                            <td style=" width:30%; text-align:center;">Account</td>
                            <td style=" width:30%; text-align:center;">Manager</td>
                            <td style=" width:30%; text-align:center;">Receiver's Signature </td>
                        </tr>
                    </table>
                    <t t-call="print_voucher.report_footer_custom" /><br/><br/>
                    <div id="breaker" style="margin-bottom:3px;margin-top:10px">
                        <div id="dots" style="padding-left: 13px;margin-top: -25px;color:#898b8f;">
..................................................................................................................................................................................................................................................................................................................
                        </div>
                    </div><br/>
                    <div id="watermark" >
                        <p style="position:absolute;padding-left:300px;padding-right:420px;padding-top:250px;color:lightgrey;font-size:60px;transform:rotate(15deg);-webkit-transform:rotate(320deg);">Office Copy</p>
                    </div>
                    <div id="container" style="position:relative;">
                        <div class="row" style="padding-bottom:10px">
                            <div class="col-sm-12">
                                <t t-call="print_voucher.report_header_custom"/>
                                <div class="header"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <t t-if="o.payment_type == 'inbound'">
                                    <div colspan="3" style="text-align:center;">
                                        <p style="padding-top:2%"><b>RECEIPT VOUCHER</b></p>
                                    </div>
                                </t>
                                <t t-if="o.payment_type == 'outbound'">
                                    <div colspan="3" style="padding-left:350px">
                                        <p style="padding-top:2%"><b>PAYMENT VOUCHER</b></p>
                                    </div>
                                </t>
                            </div>
                        </div>
                            <div class="row" >
                                <div class="col-xs-6">
                                    <div style="text-align:left;margin-left: 8px;">
                                        <t t-if="o.amount">Amount : <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></t>
                                    </div>
                                </div>
                                <div class="col-xs-6">

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 ">
                                    <div style=" padding-left:950px; padding-top:2px;" >
                                        <t t-if="o.name">No : <span t-field="o.name"/></t>
                                        <br/>
                                        <t t-if="o.date">Date : <span t-field="o.date"/></t>
                                    </div>
                                </div>
                            </div>


                            <div id="data" style="margin-top:3%;">
                                <t t-if="o.payment_type == 'inbound' ">
                                    <div id="val"  style="margin-bottom: 0px ! important;padding-left: 71px;height: 0px;margin-left: 175px;">
                                        <t t-if="o.partner_id"><span t-field="o.partner_id"/></t>
                                    </div>
                                    <div  id="label" style="margin-top: 0px;">Received from  Mr. / M /s.</div>
                                    <p id="dots" style="padding-left: 219px;margin-top: -15px;">
............................................................................................................................................................................................................................................................
                                    </p>
                                </t>

                                <t t-if="o.payment_type == 'outbound' ">
                                    <div id="val"  style="margin-bottom: 0px ! important;padding-left: 58px;height: 0px;">
                                        <t t-if="o.partner_id"><span t-field="o.partner_id"/></t>
                                    </div>
                                    <div  id="label" style="margin-top: 0px;">Paid to</div>
                                    <p id="dots" style="padding-left: 50px;margin-top: -15px;">
...............................................................................................................................................................................................................................................

                                    </p>
                                </t>

                                <div id="val"  style="margin-bottom: 0px ! important;padding-left: 110px;height: 0px;">
                                    <t t-if="o.amount"><span t-field="o.words_amount"></span></t>
                                </div>
                                <div  id="label" style="margin-top: 0px;">Sum of</div>
                                <p id="dots" style="padding-left: 73px;margin-top: -15px;">
................................................................................................................................................................................................................................................................................................
                                </p>
                                <div id="val"  style="margin-bottom: 0px ! important;padding-left: 103px;height: 0px;">
                                    <t t-if="o.ref"><span t-field="o.ref"/></t>
                                </div>
                                <div  id="label" style="margin-top: 0px;">Being</div>
                                <p id="dots" style="padding-left:71px;margin-top: -15px;">
................................................................................................................................................................................................................................................................................................

                                </p><br/><br/><br/><br/>
                                <table style="width:100%; table-layout:fixed;border: 1px solid #FFFFFF;border-collapse: collapse;">
                                    <tr>
                                        <td style=" width:30%; text-align:center;"><span t-field="o.create_uid"/></td>
                                        <td style=" width:30%; text-align:center;">...............................</td>
                                        <td style=" width:30%; text-align:center;">............................... </td>
                                    </tr>
                                    <tr>
                                        <td style=" width:30%; text-align:center;">Account</td>
                                        <td style=" width:30%; text-align:center;">Manager</td>
                                        <td style=" width:30%; text-align:center;">Receiver's Signature </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
<!--                </t>-->
            </t>
    </template>


    <template id="report_voucher">
	    <t t-call="web.html_container">
	        <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                <t t-call="print_voucher.report_voucher_document" t-lang="lang"/>
	        </t>
	    </t>
	</template>
</odoo>