

<odoo>
    <data>
 <!-- tessssst-->
        <!-- Tree View Definition -->
        <record model="ir.ui.view" id="product_barcode_tree_view">
            <field name="name">product.product.tree.view</field>
            <field name="model">pos.multi.barcode.options</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="unit" required="True"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <!-- Action Definition -->
        <record id="actionـbarcode_tree" model="ir.actions.act_window">
            <field name="name">الباركود المتعدد</field>
            <field name="res_model">pos.multi.barcode.options</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_barcode_tree_view"/>
        </record>

        <!-- Menu Item Definition -->
        <menuitem id="menu_product_product_tree"
                  name="رفع الباركود المتعدد"
                  action="actionـbarcode_tree"
                  parent="sale.product_menu_catalog"
                  sequence="10"/>

    </data>
</odoo>