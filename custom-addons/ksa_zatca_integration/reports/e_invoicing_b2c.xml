<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_e_invoicing_b2c_template">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.basic_layout">
                <t t-if="doc_model == 'pos.order'">
                    <t t-set="doc" t-value="doc.account_move"/>
                </t>
                <t t-if="doc.debit_origin_id">
                    <t t-set="invoice_type" t-value="'Simplified Debit Note'"/>
                    <t t-set="invoice_type_ar" t-value="'اشعار ﻣﺪﻳﻦ مبسطة'"/>
                </t>
                <t t-elif="doc.move_type == 'out_refund'">
                    <t t-set="invoice_type" t-value="' Simplified Credit Note'"/>
                    <t t-set="invoice_type_ar" t-value="'اشعار دائن مبسطة'"/>
                </t>
                <t t-else="">
                    <t t-set="invoice_type" t-value="'Simplified Tax Invoice'"/>
                    <t t-set="invoice_type_ar" t-value="'فاتورة ضريبية مبسطة'"/>
                </t>

                <t t-set="conf_partner"
                   t-value="doc._get_zatca_company_data(doc.company_id.parent_root_id) if doc.l10n_is_self_billed_invoice else doc._get_zatca_partner_data()"/>
                <t t-set="conf_company"
                   t-value="doc._get_zatca_partner_data() if doc.l10n_is_self_billed_invoice else doc._get_zatca_company_data(doc.company_id.parent_root_id)"/>

                <div dir="ltr">
                    <div class="pos-receipt page_block">
                        <style>
                            hr{
                            opacity: 1;
                            border-top: 1px solid rgba(0, 0, 0, 0.1);
                            color: white;
                            }
                            .data_column{
                            font-size:10px !important;
                            }
                            .label_column.arabic_label{
                            text-align:right;
                            font-size:9px !important;
                            float:right;
                            }
                            .label_column{
                            font-size:12px;
                            font-weight:bold
                            }
                            .total_table td.right_column.arabic_label, .reason_table span.right_column.arabic_label{
                            font-size:11px !important;
                            font-weight:bold;
                            }
                            .total_table td.right_column, .reason_table span.right_column{
                            text-align:right;
                            font-size:10px;
                            padding: 5px 0;
                            }
                            .reason_table span.right_column{
                            float: right;
                            }
                            .reason_table span.data_column{
                            padding: 5px 15px
                            }
                            .total_table td.left_column{
                            text-align:left;
                            font-size:10px;
                            padding: 5px 0;
                            font-weight:bold;
                            }
                            .reason_table span.left_column{
                            text-align:left;
                            font-size:9px;
                            padding: 5px 0;
                            font-weight:bold;
                            }
                            .page_block{
                            background-color: white;
                            font-family: 'Arial';
                            text-align:center;
                            font-size: 14px;
                            width: 300px;
                            padding:0;
                            margin:0;
                            }
                            #phase2qrcode{
                            text-align:center;
                            width:250px;
                            max-height:250px
                            }
                            table#invline{

                            }
                            .invline_column{
                            border-bottom:1pt dashed black;
                            vertical-align:bottom;
                            margin-bottom:5pt;
                            padding-bottom:3pt;
                            }
                            .invline_data{
                            text-align:left;
                            font-size:10px;
                            padding: 1px 0;
                            }
                        </style>
                        <style type="text/css">
                            <![CDATA[
                                @font-face {
                                    font-family: 'Arial';
                                    font-weight: bold;
                                    font-style: bold;
                                    src: url('/tax_reports/static/src/fonts/arial.ttf')
                                    format('truetype');
                                }
                                tr,td {
                                    font-family: 'Arial';
                                }
                            ]]>
                        </style>
                        <div class="pos-receipt page_block"
                             style="text-align: left;padding-bottom: 0px;display: inline-block;overflow: hidden;">
                            <t t-if="doc.company_id.parent_root_id.logo">
                                <img t-attf-src="data:image/*;base64,{{doc.company_id.parent_root_id.logo}}"
                                     style="max-height:500px; max-width:50%;display: block;margin: 0 auto;"
                                     t-options='{"widget": "image"}'/>
                                <br/>
                            </t>
                            <t t-if="not doc.company_id.parent_root_id.logo">
                                <h2 style="text-align: center;" class="pos-receipt-center-align">
                                    <t t-esc="conf_company['name']['value']"/>
                                </h2>
                                <br/>
                            </t>

                            <div class="pos-receipt-contact"
                                 style="padding-top:10px;text-align: center;font-weight:bold;font-size:15px;">
                                <span>
                                    <t t-esc="invoice_type_ar"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="invoice_type"/>
                                </span>
                            </div>
                            <hr/>

                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="30%">
                                            <span class="label_column">
                                                <b>Invoice Ref #</b>
                                            </span>
                                        </td>
                                        <td width="40%" class="data_column">
                                            <span id="invoice_number">
                                                <t t-esc="doc.zatca_unique_seq"/>
                                            </span>
                                        </td>
                                        <td width="30%">
                                            <span class="label_column arabic_label">رقم الفاتورة</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>Invoice Date</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span t-if="doc.l10n_sa_confirmation_datetime" class="data_column">
                                                <t t-esc="doc.get_context_datetime()"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">تاريخ إصدار الفاتورة</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>Tax Currency</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">SAR</span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">العملة الضريبية</span>
                                        </td>
                                    </tr>
                                    <t t-if="doc.reversed_entry_id or doc.debit_origin_id">
                                        <tr>
                                            <td>
                                                <span class="label_column">
                                                    <b>Original Invoice Ref</b>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="data_column">
                                                    <t t-esc="doc.reversed_entry_id.zatca_unique_seq"/>
                                                    <t t-esc="doc.debit_origin_id.zatca_unique_seq"/>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="label_column arabic_label">مرجع الفاتورة القياسي</span>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>Supply Date</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="doc.delivery_date"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">ﺗﺎرﻳﺦ اﻟﺘﻮرﻳﺪ</span>
                                        </td>
                                    </tr>
                                    <!--                            Company/Seller details -->
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>Name</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="conf_company['name']['value']"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">اسم المؤسسة</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>VAT</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="doc.company_id.parent_root_id.vat"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">رقم تسجیل ضریبة القیمة المضافة
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="label_column">
                                                <b>Address</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="doc.company_id.parent_root_id.building_no"/>,
                                                <t t-esc="conf_company['street']['value']"/>
                                                <t t-if="conf_company['street2']['value']"><t
                                                        t-esc="conf_company['street2']['value']"/>,
                                                </t>
                                                <t t-if="doc.company_id.parent_root_id.additional_no"><t
                                                        t-esc="doc.company_id.parent_root_id.additional_no"/>,
                                                </t>
                                                <t t-esc="conf_company['district']['value']"/>,
                                                <t t-esc="doc.company_id.parent_root_id.zip"/>,
                                                <t t-esc="conf_company['city']['value']"/>,
                                                <t t-if="conf_company['state_id_name']['value']"><t
                                                        t-esc="conf_company['state_id_name']['value']"/>,
                                                </t>
                                                <t t-esc="doc.company_id.parent_root_id.country_id.name"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">العنوان</span>
                                        </td>
                                    </tr>
                                    <!--                            Customer/Buyer details -->
                                    <tr t-if="conf_partner['name']['value']">
                                        <td>
                                            <span class="label_column">
                                                <b>Customer Name</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="conf_partner['name']['value']"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">اسم العميل</span>
                                        </td>
                                    </tr>
                                    <tr t-if="doc.partner_id.buyer_identification">
                                        <td>
                                            <span class="label_column">
                                                <b>Other Buyer Type</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="doc.get_other_id(doc.env['ir.model.fields.selection'].sudo().search([('field_id', '=', doc.env['ir.model.fields'].sudo().search([('name', '=', 'buyer_identification'), ('model_id', '=', doc.env['ir.model'].sudo().search([('model', '=', 'res.partner')]).id)]).id), ('value', '=', doc.partner_id.buyer_identification)]).name)"/>
                                                (<t t-esc="doc.partner_id.buyer_identification"/>)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">بائع آخر</span>
                                        </td>
                                    </tr>
                                    <tr t-if="doc.partner_id.buyer_identification">
                                        <td>
                                            <span class="label_column">
                                                <b>Other Buyer Id</b>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="data_column">
                                                <t t-esc="doc.partner_id.buyer_identification_no"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="label_column arabic_label">معرف آخر</span>
                                        </td>
                                    </tr>
                                </table>
                                <hr/>
                                <t t-if="not doc._is_downpayment()"
                                   t-set="invoice_line_ids"
                                   t-value="doc.invoice_line_ids.filtered(lambda x: x.display_type not in ['line_section', 'line_note'] and not x.sale_line_ids.is_downpayment)"/>
                                <t t-else=""
                                   t-set="invoice_line_ids"
                                   t-value="doc.invoice_line_ids.filtered(lambda x: x.display_type not in ['line_section', 'line_note'])"/>
                                <table width="100%" id="invline">
                                    <colgroup>
                                        <col width='40%'/>
                                        <col width='20%'/>
                                        <col width='20%'/>
                                        <col width='20%'/>
                                    </colgroup>
                                    <tr style="line-height: 1;">
                                        <th colspan='4' class="invline_column"
                                            style="text-align:center;border-top:1pt dashed black;border-bottom:0pt;">
                                            <span class="label_column">الوصف</span>
                                            <br/>
                                            <span class="label_column">Description</span>
                                        </th>
                                    </tr>
                                    <tr style="line-height: 1;">
                                        <th class="invline_column">
                                            <span class="label_column arabic_label">إﺟﻤﺎﻟﻲ اﻟﻤﺒﻠﻎ ﺷﺎﻣﻞ ﺿﺮﻳﺒﺔ اﻟﻘﻴﻤﺔ
                                                اﻟﻤﻀﺎﻓﺔ
                                            </span>
                                            <br/>
                                            <span class="label_column">Total Inclusive of VAT</span>
                                        </th>
                                        <th class="invline_column">
                                            <span class="label_column arabic_label">خصومات</span>
                                            <br/>
                                            <span class="label_column">Discount</span>
                                        </th>
                                        <th class="invline_column">
                                            <span class="label_column arabic_label">السعر</span>
                                            <br/>
                                            <span class="label_column">Price</span>
                                        </th>
                                        <th class="invline_column">
                                            <span class="label_column arabic_label">الكمية</span>
                                            <br/>
                                            <span class="label_column">Quantity</span>
                                        </th>
                                        <!--                                <th class="invline_column" style="text-align:center;">-->
                                        <!--                                    نوع<br/>Type-->
                                        <!--                                </th>-->
                                    </tr>
                                    <t t-foreach="invoice_line_ids" t-as="line" t-key="line.id">
                                        <t t-set="bt_141" t-value="doc.get_bt_141(line.zatca_id)"/>
                                        <tr>
                                            <td colspan='4'
                                                class="invline_data"
                                                style="text-align:center;max-width:100%">
                                                <span t-esc="doc._get_zatca_product_name(line)['name']['value']"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="invline_data">
                                                <span t-esc="doc.get_ksa_12(line.zatca_id)"
                                                      t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="invline_data">
                                                <span t-esc="doc.get_bt_136(line.zatca_id)"
                                                      t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="invline_data">
                                                <span t-esc="doc.get_bt_146(line.zatca_id)"
                                                      t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="invline_data">
                                                <t t-esc="line.quantity"/>
                                            </td>
                                            <!--                                    <td class="invline_data">-->
                                            <!--                                        <t t-esc="line.product_uom_id.name"/>-->
                                            <!--                                    </td>-->
                                        </tr>
                                        <tr>
                                            <td colspan="4"
                                                style="border-bottom:1pt dashed black;vertical-align:bottom;"/>
                                        </tr>
                                    </t>
                                </table>
                                <hr></hr>
                                <table width="100%" class="total_table">
                                    <tr>
                                        <td width="30%" class="left_column">
                                            <span>Total<br/>(Excluding VAT)
                                            </span>
                                        </td>
                                        <td width="20%" class="right_column">
                                            <span t-esc="doc.get_bt_109()"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td width="50%" class="right_column arabic_label">
                                            <span>الإجمالي<br/>(غيرشاملة ضريبة القيمة المضافة)
                                            </span>
                                        </td>
                                    </tr>
                                    <tr t-if="doc.amount_tax">
                                        <td class="left_column">
                                            <span>Total VAT</span>
                                        </td>
                                        <td class="right_column">
                                            <span t-esc="doc.get_bt_110()"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="right_column arabic_label">
                                            <span>إجمالي ﻤﺒﻠﻎ ضريبة القيمة المضافة</span>
                                        </td>
                                    </tr>
                                    <tr t-if="doc.currency_id.name != 'SAR'">
                                        <td class="left_column">
                                            <span>Total VAT (SAR)</span>
                                        </td>
                                        <td class="right_column">
                                            <span t-esc="doc.get_bt_111()"
                                                  t-options='{"widget": "monetary", "display_currency": doc.company_id.parent_root_id.currency_id}'/>
                                        </td>
                                        <td class="right_column arabic_label">
                                            <span>إجمالي ﻤﺒﻠﻎ ضريبة القيمة المضافة</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="left_column">
                                            <span>Total Amount</span>
                                        </td>
                                        <td class="right_column">
                                            <span t-esc="doc.get_bt_112()"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="right_column arabic_label">
                                            <span>(إﺟﻤﺎﻟﻲ ﻘﻴﻤﺔ اﻟﻔﺎﺗﻮرة (ﺷﺎﻣﻞ ﺿﺮﻳﺒﺔ اﻟﻘﻴﻤﺔ اﻟﻤﻀﺎﻓﺔ</span>
                                        </td>
                                    </tr>
                                    <!--                            Not required by zatca-->
                                    <tr>
                                        <td class="left_column">
                                            <span>Amount Due</span>
                                        </td>
                                        <td class="right_column">
                                            <span t-esc="doc.get_bt_115()"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="right_column arabic_label">
                                            <span>المبلغ المتبقي</span>
                                        </td>
                                    </tr>
                                </table>
                                <hr></hr>
                                <t t-if="doc.env['ir.module.module'].sudo().search([('name', '=', 'point_of_sale')]) == 'installed'">
                                    <t t-set="pos_order"
                                       t-value="doc.env['pos.order'].sudo().search([('name', '=', doc.invoice_origin)])"/>
                                    <table width="100%" class="total_table" t-if="pos_order.id">
                                        <t t-if="doc.company_id.zatca_pos_pay">
                                            <t t-foreach="pos_order.payment_ids.filtered(lambda x: x.amount > 0)"
                                               t-as="line" t-key="line.id">
                                                <tr>
                                                    <td width="30%" class="left_column">
                                                        <span>
                                                            <t t-esc="line.payment_method_id.name"/>
                                                        </span>
                                                    </td>
                                                    <td width="20%" class="right_column">
                                                        <span t-esc="line.amount"
                                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                                    </td>
                                                    <td width="50%" class="right_column arabic_label">
                                                        <span>
                                                            <t t-esc="line.payment_method_id.arabic_name"/>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr t-else="">
                                            <td width="30%" class="left_column">
                                                <span>Paid Amount</span>
                                            </td>
                                            <td width="20%" class="right_column">
                                                <span t-esc="sum(pos_order.payment_ids.filtered(lambda x: x.amount > 0).mapped('amount') or [0])"
                                                      t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td width="50%" class="right_column arabic_label">
                                                <span>المبلغ المدفوع</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="left_column">
                                                <span>Change Amount</span>
                                            </td>
                                            <td class="right_column">
                                                <span t-esc="sum(pos_order.payment_ids.filtered(lambda x: x.amount &lt; 0).mapped('amount') or [-0]) * -1"
                                                      t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="right_column arabic_label">
                                                <span>تغيير المبلغ</span>
                                            </td>
                                        </tr>
                                    </table>
                                    <hr></hr>
                                </t>
                                <table width="100%" class="reason_table"
                                       t-if="doc.reversed_entry_id or doc.debit_origin_id">
                                    <tr>
                                        <td>
                                            <span class="left_column">Reason for issuance of
                                                <t t-esc="invoice_type"/>
                                            </span>
                                            <span class="right_column arabic_label">إشعار إصدار السبب</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="right_column data_column" t-esc="doc.credit_debit_reason"/>
                                        </td>
                                    </tr>
                                </table>
                                <hr t-if="doc.reversed_entry_id or doc.debit_origin_id"></hr>
                            </div>

                        </div>
                        <!--                 Qr code-->
                        <div class="pos-receipt page page_block"
                             style="page-break-inside: avoid !important;
                             page-break-after: avoid !important;
                             page-break-before: auto !important;">
                            <img id="phase2qrcode" alt="Barcode" t-att-src="doc.get_qrcode()" style="width: 300px;"/>
                        </div>
                        <div class="pos-receipt page_block">
                            <span style="text-align:center">Thank You</span>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>